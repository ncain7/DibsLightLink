<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_color"
        android:textSize="40sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:text="@string/light_color"
        android:textColor="@color/colorPrimaryDark"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/color_view_standard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_color"
        android:layout_toRightOf="@id/tv_color"
        android:layout_toEndOf="@id/tv_color"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignBottom="@+id/tv_color"
        android:background="@color/colorAccent"/>

</RelativeLayout>